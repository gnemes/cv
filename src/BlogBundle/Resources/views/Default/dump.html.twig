{% extends 'BlogBundle::base.html.twig' %}

{% block body %}
<div class="content">
    <div class="container">
        <div class="col-md-6">
            <h3>Visitas</h3>
            <table class="table table-striped">
                <thead>
                    <tr> 
                        <th>#</th> 
                        <th>IP</th> 
                        <th>Post</th> 
                        <th>Created</th> 
                    </tr> 
                </thead>
                <tbody> 
                    {% for visit in visits %}
                    <tr> 
                        <th scope="row">{{visit.id}}</th> 
                        <td>{{visit.ip}}</td> 
                        <td>{{visit.post}}</td> 
                        <td>{{visit.created|date("m/d/Y")}}</td>
                    </tr> 
                    {% endfor %}     
            </table>
        </div>
        <div class="col-md-6">
            <h3>Comentarios</h3>
            <table class="table table-striped">
                <thead>
                    <tr> 
                        <th>#</th> 
                        <th>IP</th> 
                        <th>Nickname</th> 
                        <th>Post</th> 
                        <th>Created</th> 
                    </tr> 
                </thead>
                <tbody> 
                    {% for comment in comments %}
                    <tr> 
                        <th scope="row">{{comment.id}}</th> 
                        <td>{{comment.ip}}</td> 
                        <td>{{comment.nickname}}</td> 
                        <td>{{comment.post}}</td> 
                        <td>{{comment.created|date("m/d/Y")}}</td>
                    </tr> 
                    {% endfor %}     
            </table>
        </div>            
    </div>
</div>
{% endblock %}